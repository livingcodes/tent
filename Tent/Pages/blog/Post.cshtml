@page "{slug?}"
@model Tent.Pages.blog.PostPage

<p>
    <a href="/blog">POSTS</a>
</p>
<h1>
    @Model.Post?.Title
</h1>
<p>
    <a href="/blog/editpost/@RouteData.Values["slug"].ToString()">Edit</a>
    <br>
    @Model.Post?.PublishDate.ToString("M/d/yy")
</p>
<div class="preview">
    @Html.Raw(Model.Post?.Body)
</div>